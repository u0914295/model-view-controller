<div class="row justify-content-center">
    <div class="col-md-8">
        {{#if posts.length}}
            {{#each posts}}
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title"><a href="/post/{{id}}">{{title}}</a></h2>
                    <p class="card-subtitle mb-2 text-muted">Posted on {{format_date date_created}} by {{user.name}}</p>
                </div>
                <div class="card-body">
                    <p class="card-text">{{truncate content length=200}}</p>
                </div>
            </div>
            {{/each}}
        {{else}}
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title">No posts available</h2>
                </div>
                <div class="card-body">
                    <p class="card-text">There are no posts available!</p>
                </div>
            </div>
        {{/if}}
    </div>
</div>